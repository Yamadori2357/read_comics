<% provide(:title, '漫画作成') %>
<h1><%= yield(:title) %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @comic, local: true) do |f| %>
    <%= render 'shared/error_messages', object: f.object  %>
      <%= f.label :タイトル %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :作家名 %>
      <%= f.text_field :author_name, class: 'form-control' %>

      <%= f.label :作品内容 %>
      <%= f.text_area :content, class: 'form-control' %>

      <%= f.label :ジャンル %>
      <%= f.text_field :genre, class: 'form-control' %>
      
      <%= f.label :イメージ画像 %>
      <%= f.file_field :cover_image, accept: "image/jpeg,image/png", class: 'form-control' %>

      <%= f.submit "漫画作成", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>