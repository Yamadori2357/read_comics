<% provide(:title, @user.name) %>
<div class = profile>
<h1>
        <% if @user.profile_image.attached? %>
        <%= image_tag @user.display_profile_image %>
        <% else %>
        <%= image_tag "default.jpg" %>
        <% end %>
        <%= @user.name %>
        @<%= @user.unique_name %>
        <%= @user.self_instoduction %>
</div>
<section class="stats">
  <%= render 'shared/stats' %>
</section>
<div class="col-md-8">
  <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>投稿数 <%= @user.microposts.count %></h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
</div>