<% provide(:title, @user.name) %>
<div class="user-info">
  <div class="profile">
    <div class="user-box">
    <% if @user.profile_image.attached? %>
      <%= image_tag @user.profile_image, class:"profile-big-image" %>
    <% else %>
      <%= image_tag "default.jpg", class:"profile-big-image" %>
    <% end %>
    </div>
    <div class="user-box">
      <h1><%= @user.name %></h1>
      <h2>@<%= @user.unique_name %></h2>
    </div>
    <h3><%= @user.self_instoduction %></h3>
  </div>
<section class="stats">
  <%= render 'shared/stats' %>
</section>
</div>
<div class="col-md-8">
  <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>投稿数 <%= @user.microposts.count %></h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
</div>