<li>
  <% if user.profile_image.attached? %>
    <%= image_tag user.display_lit_profile_image %>
  <% else %>
    <%= image_tag "default_lit.jpg" %>
  <% end %>
  <%= link_to user.name, user %>
  <%= user.self_instoduction %>
  <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to "削除", user, method: :delete,
                                  data: { confirm: "本当にこのアカウントを消しますか？" } %>
  <% end %>
</li>