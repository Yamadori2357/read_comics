<% provide(:title, "プロフィールを変更") %>
<h1><%= yield(:title) %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, url: { action: 'profile_update' }, local: true) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :名前 %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :Eメール %>
      <%= f.email_field :email, class: 'form-control' %>
      
      <%= f.label :自己紹介（好きな漫画など） %>
      <%= f.text_area :self_instoduction, class: 'form-control' %>
      
      <%= f.submit "保存", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>