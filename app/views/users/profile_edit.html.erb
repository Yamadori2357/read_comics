<% provide(:title, "プロフィールを変更") %>
<h1><%= yield(:title) %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, url: { action: 'profile_update' }, local: true) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :名前 %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :Eメール %>
      <%= f.email_field :email, class: 'form-control' %>
      
      <%= f.label :自己紹介（好きな漫画など） %>
      <%= f.text_area :self_instoduction, class: 'form-control' %>
      
      <%= f.label :プロフィール画像 %>
      <%= f.file_field :profile_image, accept: "image/jpeg,image/png", class: 'form-control' %>
      
      <%= f.label :ヘッダー画像 %>
      <%= f.file_field :header_image, accept: "image/jpeg,image/png", class: 'form-control' %>
      
      <%= f.label :生年月日 %>
      <%= raw sprintf(
            f.date_select( :birth_date, use_month_numbers: true, start_year: 1930,
              end_year: (Time.now.year), default: Date.new(1989, 1, 1), date_separator: '%s'), '年 ', '月 ') + '日' %>



      <%= f.submit "保存", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>