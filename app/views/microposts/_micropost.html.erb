<div class="micropost">
<li id="micropost-<%= micropost.id %>">
  <span class="user">
  <% if micropost.user.profile_image.attached? %>
    <%= image_tag micropost.user.display_profile_image, class:"profile-image" %>
  <% else %>
    <%= image_tag "default.jpg", class:"profile-image" %>
  <% end %>
  <%= link_to micropost.user.name, micropost.user, class:"user_name"%>
  </span>
  <%= time_ago_in_words(micropost.created_at) %>前
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.display_image if micropost.image.attached? %>
  </span>
  <span class="timestamp">
    <% if current_user?(micropost.user) %>
      <%= link_to "削除", micropost, method: :delete,
                                       data: { confirm: "本当に削除しますか？" } %>
    <% end %>
  </span>
  <%= render "likes/like", micropost: micropost %>
</li>
</div>